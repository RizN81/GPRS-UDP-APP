<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#336600"
    tools:context="com.example.dcmotorgprs.MainActivity">

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="serif"
        android:gravity="center"
        android:text="Status View"
        android:textColor="#ffffff"
        android:textSize="18sp"
        android:textStyle="italic" />

    <TextView
        android:id="@+id/udpserver_ip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:textColor="#ffffff"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/ip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/udpserver_ip"
        android:gravity="center"
        android:textColor="#ffffff"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/ip"
        android:gravity="center"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:layout_below="@+id/view"
        android:gravity="center"
        android:text="Frequency"
        android:textColor="#ffffff"
        android:textSize="20sp" />

    <com.jjoe64.graphview.GraphView
        android:id="@+id/ecgGraph"
        android:layout_width="match_parent"
        android:layout_height="200dip" />

    <TextView
        android:id="@+id/txtECG"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:layout_below="@+id/textView3"
        android:layout_marginTop="25dp"
        android:gravity="center"
        android:text="Values1"
        android:textColor="#ffffff"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/txtTemperature"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:layout_below="@+id/txtECG"
        android:layout_marginTop="25dp"
        android:gravity="center"
        android:text="Values1"
        android:textColor="#ffffff"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/txtPulseOx"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:layout_below="@+id/txtTemperature"
        android:layout_marginTop="25dp"
        android:gravity="center"
        android:text="Values2"
        android:textColor="#ffffff"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/txtTempStatus"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:layout_below="@+id/txtPulseOx"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="Values2"
        android:textColor="#ffffff"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/txtECGStatus"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:layout_below="@+id/txtTempStatus"
        android:layout_marginTop="0dp"
        android:gravity="center"
        android:text="Values2"
        android:textColor="#ffffff"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/txtHeartBeatStatus"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:layout_below="@+id/txtECGStatus"
        android:layout_marginTop="25dp"
        android:gravity="center"
        android:text="Values2"
        android:textColor="#ffffff"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/tems5"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:layout_below="@+id/txtHeartBeatStatus"
        android:layout_marginTop="25dp"
        android:gravity="center"
        android:text="Values2"
        android:textColor="#ffffff"
        android:textSize="20sp" />

    <TableRow
        android:id="@+id/table1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tems5"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp"
        android:textColor="#ffffff">

    </TableRow>

    <TableRow
        android:id="@+id/table2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/table1"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="40dp"
        android:gravity="center"
        android:visibility="invisible">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="serif"
            android:text="Relay  "
            android:textSize="18dp"
            android:textStyle="italic" />

        <Button
            android:id="@+id/button1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:background="@drawable/button_bg_ok"
            android:fontFamily="serif"
            android:text="ON"
            android:textColor="#ffff"
            android:textSize="18sp"
            android:textStyle="italic" />

        <Button
            android:id="@+id/button2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/button_bg_cancel"
            android:fontFamily="serif"
            android:text="OFF"
            android:textColor="#ffff"
            android:textSize="18sp"
            android:textStyle="italic" />
    </TableRow>

    <TableRow
        android:id="@+id/table3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/table2"
        android:layout_marginLeft="60dp"
        android:layout_marginStart="60dp"
        android:layout_marginTop="20dp"
        android:visibility="gone">

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="serif"
            android:text="Relay 2"
            android:textSize="18dp"
            android:textStyle="italic" />

        <Button
            android:id="@+id/button3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:background="@drawable/button_bg_ok"
            android:fontFamily="serif"
            android:text="ON"
            android:textColor="#ffff"
            android:textSize="18sp"
            android:textStyle="italic" />

        <Button
            android:id="@+id/button4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:background="@drawable/button_bg_cancel"
            android:fontFamily="serif"
            android:text="OFF"
            android:textColor="#ffff"
            android:textSize="18sp"
            android:textStyle="italic" />
    </TableRow>

    <TableRow
        android:id="@+id/table4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/table3"
        android:layout_marginLeft="60dp"
        android:layout_marginStart="60dp"
        android:layout_marginTop="20dp"
        android:visibility="gone">

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="serif"
            android:text="Relay  3"
            android:textSize="18dp"
            android:textStyle="italic" />

        <Button
            android:id="@+id/button5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:background="@drawable/button_bg_ok"
            android:fontFamily="serif"
            android:text="ON"
            android:textColor="#ffff"
            android:textSize="18sp"
            android:textStyle="italic" />

        <Button
            android:id="@+id/button6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:background="@drawable/button_bg_cancel"
            android:fontFamily="serif"
            android:text="OFF"
            android:textColor="#ffff"
            android:textSize="18sp"
            android:textStyle="italic" />
    </TableRow>

    <TableRow
        android:id="@+id/table5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/table4"
        android:layout_marginLeft="60dp"
        android:layout_marginStart="60dp"
        android:layout_marginTop="20dp"
        android:visibility="gone">

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="serif"
            android:text="Relay    4"
            android:textSize="18dp"
            android:textStyle="italic" />

        <Button
            android:id="@+id/button7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:background="@drawable/button_bg_ok"
            android:fontFamily="serif"
            android:text="ON"
            android:textColor="#ffff"
            android:textSize="18sp"
            android:textStyle="italic" />

        <Button
            android:id="@+id/button8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:background="@drawable/button_bg_cancel"
            android:fontFamily="serif"
            android:text="OFF"
            android:textColor="#ffff"
            android:textSize="18sp"
            android:textStyle="italic" />
    </TableRow>

</RelativeLayout>